        "rema"  => rema()
        "rma"   => rma()
        "sma"   => sma()
        "smma"  => smma()
        "tema"  => tema()
        "tma"   => tma()
        "tz"    => tz()
        "VIDYA" => VIDYA()
        "vwma"  => vwma()
        "wma"   => wma()
        "wwma"  => wwma()
        "zlema" => zlema()
    _ma


